@model Controls.Link.Models.LinkModel
@using WebLib.UI
@{
    Layout = "";
}
<script src="~/Scripts/BackEnd/Controls/link.js"></script>
<link rel="stylesheet" href="~/Content/BackEnd/Controls/Link.css">
@if(Model.Link!=null){
    if (Model.Mode != Lib.AdvancedProperties.DisplayMode.AdvancedEdit && Model.Mode != Lib.AdvancedProperties.DisplayMode.Search)
    {
        <div class="control-link control-view">
            @Html.Partial("../Controls/_link", Model.Link)
        </div>  
    }
    if (!Model.ReadOnly && !string.IsNullOrEmpty(Model.Id))
    {
        <div data-control="link" class="control-link control-edit">
            @Html.Partial("../Controls/_link", Model.Link)
            <input type="hidden" name="@(Model.Name)" value="@(Model.Id)" />
        </div>
    }
}