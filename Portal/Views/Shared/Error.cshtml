@using Weblib.Models
@{
    Layout = "~/Views/Master/_AdminSimplified.cshtml";
}
    <div class="login-box">
        <div class="login-logo">
            <a style="display:block;margin: 0px auto;" href="@Lib.Tools.Utils.URLHelper.GetUrl("")">
                <img src="@Lib.Tools.Utils.URLHelper.GetUrl(@"Images/simplified/logo.png")" />
            </a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <section class="content">
                <div class="error-page">
                    <h2 class="headline text-red">500</h2>
                    <div class="error-content">
                        <h3><i class="fa fa-warning text-red"></i> Oops! Something went wrong.</h3>
                        <p>
                            We will work on fixing that right away.
                            Meanwhile, you may return to dashboard or try using the search form.
                        </p>
                        <a href="@Lib.Tools.Utils.URLHelper.GetUrl("")" style="width:60%;display:block;margin: 0px auto;" class="btn btn-block btn-danger btn-sm">
                            Return To Dashboard
                        </a>
                    </div>
                </div>
                <!-- /.error-page -->
            </section>
        </div>
        <!-- /.login-box-body -->
    </div>
    <div class="clear"></div>
